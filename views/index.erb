<h2>Hello from Index</h2>

<div class="row">
	<% @products.each do |p| %>
		<div class ="col-md-3">
			<div>
				<%= p.title %>
			</div>
			<div>
				<img src="<%= p.path_to_image %>" height="150px" />
			</div>
			<div>
				<%= p.description %>
			</div>
			<div>
				Size: <%= p.size %> cm
			</div>
			<div>
				Price: <%= p.price %> rub
			</div>
			<div>
				<button class="btn btn-sm btn-success">Add to card</button>
			</div>
		</div>
	<% end %>
</div>


<button class="btn btn-primary" onClick="something();">Click me!</button>